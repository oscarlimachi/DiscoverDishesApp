<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo (puedes poner transparente si no quieres fondo) -->
    <solid android:color="#00000000" />

    <!-- Borde -->
    <stroke
        android:width="2dp"
        android:color="#000000" />  <!-- Color del borde rojo -->

    <!-- Radio de las esquinas (opcional) -->
    <corners android:radius="8dp" />

    <!-- Padding interno (opcional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
